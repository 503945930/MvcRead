        function toHex(n) {

            var result = ''
            var start = true;

            for (var i = 32; i > 0;) {
                i -= 4;
                var digit = (n >> i) & 0xf;

                if (!start || digit != 0) {
                    start = false;
                    result += digitArray[digit];
                }
            }

            return (result == '' ? '0' : result);
